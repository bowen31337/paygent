# Application
APP_NAME=Paygent
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Custom Base URLs (for alternative LLM providers)
# Leave empty to use default provider endpoints
ANTHROPIC_BASE_URL=
OPENAI_BASE_URL=

# Cronos Configuration
CRONOS_RPC_URL=https://evm-t3.cronos.org
CRONOS_CHAIN_ID=338
CRONOS_TESTNET_RPC_URL=https://evm-t3.cronos.org
CRONOS_TESTNET_CHAIN_ID=338

# x402 Configuration
X402_FACILITATOR_URL=https://x402-facilitator.cronos.org

# Wallet Configuration (DEVELOPMENT ONLY - use HSM in production)
AGENT_WALLET_PRIVATE_KEY=your_private_key_here

# Database (SQLite for local development)
DATABASE_URL=sqlite+aiosqlite:///./paygent.db

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
